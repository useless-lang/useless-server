{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "declaration": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true
    },
    "include": ["src/**/*"],
    "exclude": ["src/grammar.js"]
  }